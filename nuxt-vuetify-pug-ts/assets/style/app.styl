html,
body
    overflow: hidden
    height: 100%

#__nuxt
    height: 100%
    overflow: auto

/* width */
::-webkit-scrollbar /* width */
    width: 8px

/* Track */
::-webkit-scrollbar-track /* Track */
    background: #f1f1f1
    box-shadow: inset 0 0 3px var(--v-primary-base)
    border-radius: 2px

/* Handle */
::-webkit-scrollbar-thumb /* Handle */
    background: var(--v-primary-base)
    box-shadow: inset 0 0 2px grey
    border-radius: 2px
    cursor: pointer

/* Handle on hover */
::-webkit-scrollbar-thumb:hover /* Handle on hover */
    background: var(--v-primary-base-lighten1)

